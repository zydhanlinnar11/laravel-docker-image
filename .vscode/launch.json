  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "hostname": "localhost",
      "pathMappings": {
        "/var/www/html": "${workspaceFolder}/src"
      },
      "ignore": ["**/vendor/**/*.php"],
      "xdebugSettings": {
        "max_children": 10000,
        "max_data": 10000,
        "show_hidden": 1
      }
    }
  ]
}
